---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/wa2desk/notifications.svg";
import c2 from "../../assets/wa2desk/chatbots.svg";
import c3 from "../../assets/wa2desk/multiagents.svg";
import c4 from "../../assets/wa2desk/integrations.svg";
import c5 from "../../assets/wa2desk/commerce.svg";
// import c1 from "../../assets/pics/card-pic1.png";
// import c2 from "../../assets/pics/card-pic2.png";
// import c3 from "../../assets/pics/card-pic3.png";
// import c4 from "../../assets/pics/card-pic4.png";
// import c5 from "../../assets/pics/card-pic5.png";
// import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "Notificaciones",
    titleBottom: "",
    img: c1,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Chat-Bots",
    titleBottom: "advertising",
    img: c2,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Multi-Agentes",
    titleBottom: "Marketing",
    img: c3,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 1,
    titleTop: "Integraciones",
    titleBottom: "Marketing",
    img: c4,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Comercio Conversacional",
    titleBottom: "Creation",
    img: c5,
    alt: "SEO",
    link: "https://google.com",
  },
];

const description = "Explota el poder de las conversaciones de WhatsApp";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Optimiza" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
